<resources>
    <style name="Base.Theme.LawanJudi" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/purple300</item> // Main Color
        <item name="colorPrimaryInverse">@color/white</item> //Color Of The Content Box
        <item name="colorOnPrimary">@color/black</item> // Text Color

        <item name="colorPrimaryContainer">@color/lightpurp</item> //Bottom Menu Color
        <item name="colorOnContainer">@color/purple700</item> //Selected Menu Color

        <item name="colorSecondary">@color/lightgrey</item> // User Chat Color
        <item name="colorTertiary">@color/lightpurp</item> // Bot Chat Color

        <item name="colorSecondaryVariant">@color/white</item>
    </style>

    <style name="Theme.LawanJudi" parent="Base.Theme.LawanJudi" />
    
    <style name="TextContent">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextContent.AppName">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.MainTitle">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.MainTitle.Landing">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextContent.MainDesc">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.NoAccount">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/roboto_med</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TextContent.NoAccount.Click">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/bluelight</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextContent.Label">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextContent.HomeTitle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.HomeDesc">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextContent.Gemini">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.SettingLabel">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.SettingLabel.LogOut">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextContent.SettingDesc">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.ResTitle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.ResDesc">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextContent.ResLabel">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.ResCont">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.ResCB">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>